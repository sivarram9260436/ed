      <form class="form-horizontal" action="" method="post" id="leaveform">
        <div class="form-group">
          <label class="col-md-3 control-label">Leave Type</label>
          <div class="col-md-5 selectContainer">
            <div class="input-group">
              <span class="input-group-addon"><i class="glyphicon glyphicon-list"></i></span>

              <%=form_tag(:controller=>"select",:action=>"create") do %>

                  <%= collection_select(:leave_record,:leave_type_id, LeaveType.all, :id, :leave_types,{}, :class=>"form-control selectpicker") %>

                  </div>
                  </div>
                  </div>
                  <div class="form-group">
                    <label class="col-md-3 control-label">From Date</label>
                    <div class="col-md-5 inputGroupContainer">
                      <div class="input-group">
                        <span class="input-group-addon"><i class=" 	glyphicon glyphicon-calendar"></i></span>
                        <!--<input  name="startdate" placeholder="DD/MM/YYYY " class="form-control"  type="text" id="startdate">-->
                        <%= text_field :leave_record,:from_date, :placeholder=>"DD/MM/YYYY ",:class=>"form-control",:id =>"startdate" %>

                      </div>
                    </div>
                  </div>
                  <!-- Text input-->
                  <div class="form-group">
                    <label class="col-md-3 control-label" >To Data</label>
                    <div class="col-md-5 inputGroupContainer">
                      <div class="input-group">
                        <span class="input-group-addon"><i class=" glyphicon glyphicon-calendar"></i></span>
                        <%= text_field :leave_record, :to_date,:placeholder=>"DD/MM/YYYY ",:class=>"form-control",:id =>"todate"%>

                      </div>
                    </div>
                  </div>
                  <!-- Text input-->

                  <div class="form-group">
                    <label class="col-md-3 control-label">No of Days</label>
                    <div class="col-md-5 inputGroupContainer">
                      <div class="input-group">
                        <span class="input-group-addon"><i class=" glyphicon glyphicon-dashboard 	"></i></span>


                        <%=text_field :leave_record, :no_of_days,:placeholder=>"DD/MM/YYYY ",:class=>"form-control",:id =>"nodays",:type=>"number"%>


                        <!--<input name="days" placeholder="No of days" class="form-control" type="number" id="nodays">-->
                      </div>
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-md-3 control-label">Reason</label>
                    <div class="col-md-5 inputGroupContainer">
                      <div class="input-group">
                        <span class="input-group-addon"><i class=" glyphicon glyphicon-exclamation-sign"></i></span>

                        <%=text_area :leave_record, :reason,:cols => "43", :rows => "3",:class=>"form-control",:type =>"text" %>


                        <!--<input name="reason" placeholder="Reason" class="form-control" type="text">-->
                      </div>
                    </div>
                  </div>
                  <!-- Button -->
                  <div class="form-group">
                    <label class="col-md-3 control-label"></label>
                    <div class="col-md-5">

                      <%= submit_tag("Request",:class=>"btn btn-warning",:spanclass =>"glyphicon glyphicon-send") %>

              <% end %>
              <!--<button type="submit" class="btn btn-warning" >Request <span class="glyphicon glyphicon-send"></span></button>-->
              </div>
              </div>
              </form>

